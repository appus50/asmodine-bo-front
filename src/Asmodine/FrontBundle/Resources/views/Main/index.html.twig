{% extends "AsmodineFrontBundle::layout.html.twig" %}

{% block meta %}
    {{ parent() }}
    <meta property="og:title" content="Asmodine, la styliste digitale qui sublime votre morphologie" />
    <meta property="og:description" content="Un grand choix de vêtements pour toutes les tailles et les morphologies. Du XS au 6XL, Asmodine vous propose une large sélection de vêtements homme et femme grande taille." />
    <meta property="og:url" content="https://www.asmodine.com" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://www.asmodine.com{{ asset('/img/socialnetwork/share/asmodine.jpg') }}" />
{% endblock %}


{% block body %}
    <div id="banner">
        <div class="container text-center">
            <h1 class="">{{ 'home.banner.title'|trans }}</h1>
            <div class="p-b-15 subtitle">{{ 'home.banner.subtitle'|trans }}</div>
            <div class="p-b-20">
                <a href="{{ url('asmodinefront_page_concept', {}, true) }}" class="btn cta4">{{ 'home.banner.discover_concept'|trans }}</a>
            </div>
            <div class="search d-table m-auto">
                <div class="row p-t-30">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <form id="search-form" action="{{ url('asmodinefront_main_search', {}, true) }}" method="post">
                            <input name="search" class="banner-search-input" placeholder="{{ 'home.banner.search_placeholder'|trans }}" />
                            <i class="banner-search-icon ion-search"></i>
                        </form>
                    </div>
                </div>
                <div class="row p-t-20">
                    {% for gender_cat in ['woman', 'man'] %}
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 call-to-action">
                            <a href="{{ url('asmodinefront_model_category', {'path': ('category.depth0.' ~ gender_cat)|trans }) }}">
                                <button class="btn cta5">
                                    <div class="icon-cat-home">
                                        <img class="category" src="{{ asset('/img/categories/icons/' ~ gender_cat ~'.png') }}">
                                    </div>
                                    <div class="libelle-cat-home">
                                        <span>{{ ('home.category.' ~ gender_cat)|trans }}</span>
                                    </div>
                                </button>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="zipper">
                <img src="{{ asset('/img/homepage/zip.png') }}">
            </div>
        </div>
    </div>

    <section id="main" class="container">
        <div class="col-md-12 bg-white">

            <div class="col-md-12 p-t-30">
                <div class="row dt">
                    <div class="col-sm-3 col-md-3 dtcfn">
                        {% set trend_left = { 'title': 'ROBE FEMME', 'image': 'large1.jpg', 'path': 'femme/vetements/robes' } %}
                        {% include 'AsmodineFrontBundle:Main:partials/trend.html.twig' with { 'trend': trend_left, 'dimension': 'large' } %}
                    </div>
                    <div class="col-sm-6 col-md-6 dtcfn">
                        <div class="asmodiv">
                            <div>
                                {#<img src="{{ asset('/img/homepage/trend/large2.jpg') }}">#}
                                <img src="{{ asset('/img/homepage/trend/accueil-2.jpg') }}">
                            </div>
                            <div class="title">&nbsp;</div>
                            <div class="p-t-15 m-b-30">
                                {#<a href="{{ path('asmodinefront_page_concept') }}" class="btn cta1 waves-effect">
                                    {{ 'home.see.concept'|trans }}
                                </a>#}
                                <a href="https://itunes.apple.com/PL/app/id1397344172?mt=8" target="_blank" class="btn cta1 waves-effect home-small-btn">APP STORE</a>
                                <a href="https://play.google.com/store/apps/details?id=com.pulpsoft.asmodine&hl=en_US" target="_blank" class="btn cta1 waves-effect home-small-btn">GOOGLE PLAY</a>
                                <a href="/files/asmodine_metre-ruban.pdf" target="_blank" class="btn cta1 waves-effect home-small-btn">
                                    Télécharger le mètre ruban
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3 dtcfn">
                        {% set trend_right = { 'title': 'POLO HOMME', 'image': 'large3.jpg', 'path': 'homme/vetements/t-shirts'} %}
                        {% include 'AsmodineFrontBundle:Main:partials/trend.html.twig' with { 'trend': trend_right, 'dimension': 'large' } %}
                    </div>
                </div>
            </div>
            {# <div class="col-md-12 p-t-30 presentation-block">
